@using System.Web.Optimization
<!DOCTYPE html>
<html lang="en">
<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>CookBook</title>
    @Styles.Render(CookBook.PL.Links.Bundles.Styles.bootstrap)
    @Styles.Render(CookBook.PL.Links.Bundles.Styles.theme)
</head>

<body>
    <h1 class="site-heading text-center text-white d-none d-lg-block">
        <span class="site-heading-upper text-primary mb-3">@CookBook.PL.Resources.Names.SiteNamePart1</span>
        <span class="site-heading-lower">@CookBook.PL.Resources.Names.SiteNamePart2</span>
    </h1>

    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark py-lg-4" id="mainNav">
        <div class="container">
            <a class="navbar-brand text-uppercase text-expanded font-weight-bold d-lg-none" href="#">Start Bootstrap</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav mx-auto">
                    <li class="nav-item active px-lg-4">
                        <a class="nav-link text-uppercase" href="@Url.Action(MVC.Home.Index())">@CookBook.PL.Resources.NavBarNames.NavHome</a>
                    </li>
                    <li class="nav-item active px-lg-4">
                        <a class="nav-link text-uppercase" href="@Url.Action(MVC.Authorization.Login())">@CookBook.PL.Resources.NavBarNames.NavLog</a>
                    </li>
                    <li class="nav-item active px-lg-4">
                        <a class="nav-link text-uppercase" href="@Url.Action(MVC.Recipe.ViewRecipeList())">@CookBook.PL.Resources.NavBarNames.NavRecipeList</a>
                    </li>
                    @if (User.IsInRole("User"))
                    {
                        <li class="nav-item active px-lg-4">
                            <a class="nav-link text-uppercase" href="@Url.Action(MVC.Recipe.AddRecipe())">@CookBook.PL.Resources.NavBarNames.NavAddRecipe</a>
                        </li>
                    }
                    @if (User.IsInRole("Admin"))
                    {
                        <li class="nav-item active px-lg-4">
                            <a class="nav-link text-uppercase" href="@Url.Action(MVC.UserControl.UserControl())">@CookBook.PL.Resources.NavBarNames.NavUserControl</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <section class="page-section about-heading">
        <div class="container">
            <div class="about-heading-content">
                <div class="row">
                    <div class="col-xl-9 col-lg-10 mx-auto">
                        <div class="bg-faded rounded p-5">
                            <diV align="right">
                                @if (!String.IsNullOrEmpty(HttpContext.Current.User.Identity.Name))
                                {
                                    <p>Login: @HttpContext.Current.User.Identity.Name</p>
                                }
                            </diV>
                            @RenderBody()
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <footer class="footer text-faded text-center py-5">
        <div class="container">
            <p class="m-0 small">Copyright &copy; CookBook 2018</p>
        </div>
    </footer>

    @Scripts.Render(CookBook.PL.Links.Bundles.Scripts.jquery)
</body>
</html>