@model IEnumerable<CookBook.PL.Models.UserViewModel>

@{
    ViewBag.Title = "UserControl";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var grid = new WebGrid(source: Model,
        defaultSort: "Name",
        rowsPerPage: 5);
    grid.Pager(WebGridPagerModes.All);
}

<h2 class="section-heading mb-4">
    <span class="section-heading-lower">User control</span>
</h2>

@grid.GetHtml(
    tableStyle: "table table-bordered",
    headerStyle: "webgrid-header",
    footerStyle: "webgrid-footer",
    alternatingRowStyle: "webgrid-alternating-row",
    rowStyle: "webgrid-row-style",
    columns: grid.Columns(
        grid.Column(format: @<text><div>@(item.WebGrid.Rows.IndexOf(item) + 1)</div></text>),
        grid.Column(columnName: "Login", header: "Login", canSort: false),
        grid.Column(columnName: "Type", header: "Category", canSort: false),
        grid.Column(header: "Delete", format: (item) =>
        {
            var link = Html.RouteLink("Delete", new { controller = "UserControl", action = "DeleteUser", id = item.id }, new { id = item.id });
            return link;
        })
        ))
